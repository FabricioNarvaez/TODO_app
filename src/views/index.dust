<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>{title}</title>
    <style>
        .btn{
            margin-top: 10px;
        }
    </style>
</head>
<body>
    <h1>{title}</h1>
    <div class="form">
        <form id="create_todo" action="/" method="post">
            <textarea id="todo_value" name="text" rows="10" cols="50"></textarea>
            <input class="btn" type="submit" value="Add TODO" />
        </form>
    </div>
    <div id="list">
        <h2>List</h2>
        <ul class="todo-list">
            {#todoList}
                <li>{.} <input id="{.}" type="button" value="X" /></li>
            {:else}
                <em>There are any TODO yet.</em>
            {/todoList}
        </ul>
        <!-- <p>{todoList}</p> -->
    </div>
</body>
</html>